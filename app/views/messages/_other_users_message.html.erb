<figure class="kaiwa-img-left">
	<% if message.user.picture? %>
		<%= image_tag message.user.picture.url %>
	<% else %>
		<%= image_tag ("default.gif") %>
	<% end %>
	<figcaption class="kaiwa-img-description">
		<%= message.user.name %>
	</figcaption>
</figure>
<div class="kaiwa-text-right">
	<p class="kaiwa-text">
		<% if message.reads.count > 0 %>
			既読
		<% end %>
		<%= message.content %>
	</p>
</div><br><br>